{% if list_sous_categories is not empty %}
	<div class="content_categorie">
		<div class="container">

			<div class="list_medias">
				<div class="list_medias_grid">
					{% for sous_categorie in list_sous_categories %}
						<div class="item_medias_grid">
							<div class="item_medias item_categorie">
								<a href="{{ path('sous_categorie_selected',{'cat_slug':categorie_selected.slug,'slug':sous_categorie.slug}) }}">
									{% if sous_categorie.image is not empty %}
										<img class="img-fluid" src="{{ asset (vich_uploader_asset(sous_categorie,'imageFile')) }}" alt="{{sous_categorie.titre}}">
									{% endif %}
								</a>
								<h2><a href="{{ path('sous_categorie_selected',{'cat_slug':categorie_selected.slug,'slug':sous_categorie.slug}) }}">{{sous_categorie.titre}}</a></h2>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
			
		</div>
	</div>
{% elseif list_produits is not empty %}
	<div class="content_sous_categorie">
		<div class="container">
			<div class="row">
				{% for produit in list_produits %}
					<div class="col-xl-4 col-lg-6 col-md-6">
						<div class="item_sous_categorie">
							<div class="img_sous_categorie">
								<a href="{{ path('produit_selected_cat',{'cat_slug':categorie_selected.slug,'slug_produit':produit.slug}) }}">
									<img class="img-fluid" src="{{ asset (vich_uploader_asset(produit,'imageFile')) }}" alt="{{produit.titre}}">
								</a>
							</div>
							<div class="text_sous_categorie">
								<label>{{produit.reference}}</label>
								<h2 class="titre_item_sous_categorie">{{produit.titre}}</h2>
								<h3 class="dimensions_item_sous_categorie">Dimensions</h3>
								<p>{{produit.dimensions}}</p>
							</div>
							<div class="plus_produit">
								<a href="{{ path('produit_selected_cat',{'cat_slug':categorie_selected.slug,'slug_produit':produit.slug}) }}">
									<img src="{{ asset('assets/images/right.png') }}" alt="flesh">
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% else %}
	<div class="container mt-5 mb-5">
		<p>{{"Il n'y a aucune sous-categorie ou produit pour l'instant."|trans}}</p>
	</div>
{% endif %}

